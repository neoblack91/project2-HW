<div class="container">
  <div class="row">
    <div class="card text-center" style="width:30rem">
      <div class="col-lg-6">
        <img src="../assets/img/juicyburger.jpg" class="card-img-top" alt="A picture of a juicy" />
        <div class="card-body">
          <h2>Burger is Saved</h2>
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block }}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>



    <div class="card" style="width: 30rem">
      <div class="col-lg-6">
        <img src="../assets/img/JuicyHamburgers7.jpg" class="card-img-top" alt="..." />
        <div class="card-body">
          <h2>Burger is Devoured!</h2>

